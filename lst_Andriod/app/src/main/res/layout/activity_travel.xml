<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 标题区域 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旅行需求定制"
            android:textColor="#1E40AF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="请填写您的旅行需求"
            android:textColor="#64748B"
            android:textSize="14sp" />

        <!-- 旅行出发地 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <EditText
                android:id="@+id/et_departure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="例如：北京、上海、广州"
                android:textColorHint="#94A3B8"
                android:inputType="text"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- 旅行目的地 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <EditText
                android:id="@+id/et_destination"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="例如：三亚、丽江、厦门"
                android:textColorHint="#94A3B8"
                android:inputType="text"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- 并排日期选择框（出发日期 + 回程日期） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:spacing="16dp">

            <!-- 出发日期 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/et_departure_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:background="@null"
                    android:hint="出发日期"
                    android:textColorHint="#94A3B8"
                    android:inputType="none"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- 回程日期 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/et_return_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:background="@null"
                    android:hint="回程日期"
                    android:textColorHint="#94A3B8"
                    android:inputType="none"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- 个性化需求标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="个性化需求"
            android:textColor="#1E293B"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 个性化需求标签 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:columnCount="3"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btn_tag1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_tag"
                android:text="体验当地文化"
                android:textColor="#475569"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_tag2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_tag"
                android:text="购物行程"
                android:textColor="#475569"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_tag3"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_tag"
                android:text="冒险活动"
                android:textColor="#475569"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_tag4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_tag"
                android:text="奢华体验"
                android:textColor="#475569"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_tag5"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_tag"
                android:text="家庭友好"
                android:textColor="#475569"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_tag6"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_tag"
                android:text="浪漫行程"
                android:textColor="#475569"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_tag7"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_tag"
                android:text="经济实惠"
                android:textColor="#475569"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_tag8"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_tag"
                android:text="无障碍设施"
                android:textColor="#475569"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_tag9"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_tag"
                android:text="自然风光"
                android:textColor="#475569"
                android:textSize="13sp" />
        </GridLayout>

        <!-- 其他需求输入框 -->
        <EditText
            android:id="@+id/et_other_demand"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input"
            android:hint="请在此输入其他特殊需求..."
            android:textColorHint="#94A3B8"
            android:padding="16dp"
            android:textSize="15sp" />

        <!-- 提交按钮 -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="?attr/selectableItemBackground"
            android:text="提交旅行需求"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- 返回按钮 -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:background="?attr/selectableItemBackground"
            android:text="返回上一页"
            android:textColor="#64748B"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>