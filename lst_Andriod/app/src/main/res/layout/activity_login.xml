<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F7F0"
    android:paddingHorizontal="24dp"
    android:paddingTop="40dp">

    <!-- 顶部返回按钮 -->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="12dp"
        android:src="@android:drawable/ic_media_previous"
        android:contentDescription="返回"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/primary_teal" />

    <!-- 标题区域 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码登录"
        android:textColor="#2D3748"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 标题下划线 -->
    <View
        android:id="@+id/v_title_line"
        android:layout_width="60dp"
        android:layout_height="4dp"
        android:background="@drawable/gradient_teal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 手机号输入框（兼容低版本，移除新属性） -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:elevation="4dp"
        app:boxBackgroundColor="#FFFFFF"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:boxStrokeColor="@drawable/box_stroke_selector"
        app:boxStrokeWidth="1dp"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        app:startIconDrawable="@android:drawable/ic_menu_call"
        app:startIconTint="@color/primary_teal"
        app:layout_constraintTop_toBottomOf="@id/v_title_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reviseText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingStart="52dp"
        android:paddingEnd="16dp"
        android:textColor="#2D3748"
        android:textColorHint="#718096"
        android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 密码输入框（兼容低版本，移除新属性） -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="4dp"
        app:boxBackgroundColor="#FFFFFF"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:boxStrokeColor="@drawable/box_stroke_selector"
        app:boxStrokeWidth="1dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/primary_teal"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        app:startIconDrawable="@android:drawable/ic_lock_lock"
        app:startIconTint="@color/primary_teal"
        app:layout_constraintTop_toBottomOf="@id/til_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="52dp"
        android:paddingEnd="16dp"
        android:textColor="#2D3748"
        android:textColorHint="#718096"
        android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 登录/注册按钮组 -->
    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/til_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.widget.Button
            android:id="@+id/revise"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_primary_teal"
            android:fontWeight="500"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:elevation="2dp"/>

        <android.widget.Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_secondary_teal"
            android:fontWeight="500"
            android:text="注册"
            android:textColor="@color/primary_teal"
            android:textSize="17sp"
            android:elevation="2dp"/>
    </LinearLayout>

    <!-- 忘记密码链接 -->
    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:text="忘记密码？"
        android:textColor="@color/primary_teal"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/ll_buttons"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 协议说明 -->
    <TextView
        android:id="@+id/tv_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="登录即同意《用户服务协议》和《隐私政策》"
        android:textColor="#718096"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>