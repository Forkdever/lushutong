<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA"
    android:fitsSystemWindows="true">

    <!-- 顶部标题栏：调整布局让标题居中 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:elevation="2dp">

        <!-- 左侧返回按钮：增大尺寸到32dp -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="返回"
            android:clickable="true"
            android:focusable="true"
            android:padding="6dp"
        android:src="@android:drawable/ic_media_previous"
        android:tint="#0A9EAD"/>

        <!-- 左侧占位：让标题居中 -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- 居中标题：增大字体 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建行程"
            android:textColor="#0A9EAD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 右侧占位：让标题居中 -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- 刷新按钮：增大尺寸到40dp -->
        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="刷新"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
        android:src="@android:drawable/ic_menu_rotate"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="#0A9EAD"
        android:elevation="2dp"/>

        <!-- 分享按钮：增大尺寸到32dp -->
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="分享"
            android:clickable="true"
            android:focusable="true"
            android:padding="6dp"
        android:src="@android:drawable/ic_menu_share"
        android:tint="#0A9EAD"/>
    </LinearLayout>

    <!-- 地图区域：添加顶部圆角与阴影 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_map_container"
        android:elevation="2dp">

        <com.amap.api.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <!-- 行程规划区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <!-- 旅行名称输入框 -->
        <EditText
            android:id="@+id/et_trip_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="为您的旅行计划命名"
            android:textColorHint="#99C8CD"
            android:textColor="#333333"
            android:textSize="16sp"
            android:background="@drawable/bg_input_trip"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:inputType="textCapWords"
            android:drawablePadding="8dp"/>

        <!-- 出发日期输入框 -->
        <EditText
            android:id="@+id/et_trip_date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="设置出发日期"
            android:textColorHint="#99C8CD"
            android:textColor="#666666"
            android:textSize="14sp"
            android:background="@drawable/bg_input_trip"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="20dp"
            android:inputType="date"
            android:maxLines="1"
            android:clickable="true"
            android:focusable="false"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="8dp"/>

        <!-- 天数标签栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <!-- 总览标签（选中态） -->
            <TextView
                android:id="@+id/tab_overview"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_tab_selected"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="总览"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="4dp"/>

            <!-- 可滑动标签容器 -->
            <HorizontalScrollView
                android:id="@+id/hs_tabs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbars="none"
                android:paddingHorizontal="8dp">

                <LinearLayout
                    android:id="@+id/scrollable_tabs_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 第一天标签（未选中） -->
                    <TextView
                        android:id="@+id/tab_day_1"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_tab_unselected"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:text="第1天"
                        android:textColor="#0A9EAD"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- 待安排标签（未选中） -->
                    <TextView
                        android:id="@+id/tab_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_tab_unselected"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:text="待安排"
                        android:textColor="#0A9EAD"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 新增天数按钮 -->
            <ImageView
                android:id="@+id/iv_add_day"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_tab_unselected"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="添加天数"
                android:scaleType="center"
                android:tint="#0A9EAD"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- 行程内容区域（滚动容器） -->
        <ScrollView
            android:id="@+id/itinerary_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/itinerary_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <!-- 第一天行程项（内容保持不变） -->

                <!-- 待安排地点列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pending_places"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="8dp" />

                <!-- 待安排提示区域 -->
                <LinearLayout
                    android:id="@+id/itinerary_pending_hint"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_pending_hint"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无安排，点击底部「+」添加行程项"
                        android:textColor="#669EAD"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- 底部按钮容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <!-- 左下角按钮：显示旅行计划 -->
            <ImageView
                android:id="@+id/iv_show_markdown"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_add_button"
                android:contentDescription="显示旅行计划"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:scaleType="center"
                android:src="@android:drawable/ic_menu_view"
                android:tint="#FFFFFF"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- 右下角按钮：添加行程项 -->
            <ImageView
                android:id="@+id/iv_add_item"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_add_button"
                android:contentDescription="添加行程项"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:scaleType="center"
                android:src="@android:drawable/ic_input_add"
                android:tint="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>