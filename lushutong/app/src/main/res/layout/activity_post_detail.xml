<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 整体滑动区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_action_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 顶部导航栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="返回"
                    android:clickable="true" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="关注"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="#2196F3"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>

            <!-- 用户信息区 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_detail_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:contentDescription="用户头像" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tv_detail_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="旅行达人小张"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_detail_time_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3小时前 · 日本东京"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 帖子内容区 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/tv_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="京都3日文化之旅"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="刚刚结束京都之旅，分享我的3日文化深度游！第一天：清水寺感受千年古刹魅力，漫步二年坂三年坂，品尝抹茶甜点；第二天：伏见稻荷大社探索千本鸟居，岚山竹林小径散步，体验和服租赁拍照；第三天：金阁寺欣赏金碧辉煌，锦市场品尝地道小吃，晚上祇园欣赏传统艺妓表演。住宿推荐：町屋民宿体验传统日式生活，美食推荐：怀石料理、宇治抹茶、京野菜料理！"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginBottom="16dp" />

                <!-- 图片网格 -->
                <GridView
                    android:id="@+id/gv_detail_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:horizontalSpacing="8dp"
                    android:verticalSpacing="8dp"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <!-- 互动数据 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="24dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_add"
                        android:contentDescription="点赞" />

                    <TextView
                        android:id="@+id/tv_detail_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2k"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="24dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:contentDescription="评论" />

                    <TextView
                        android:id="@+id/tv_detail_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="328"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_share"
                        android:contentDescription="分享" />

                    <TextView
                        android:id="@+id/tv_detail_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="156"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 一键导入按钮 -->
            <Button
                android:id="@+id/btn_import"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="一键导入此行程到我的计划"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="#673AB7"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                android:drawableStart="@android:drawable/ic_menu_add"
                android:drawablePadding="8dp" />

            <!-- 热门评论标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="热门评论"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingBottom="12dp"
                android:background="#F5F7FA" />

            <!-- 评论列表（RecyclerView） -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>

    <!-- 底部固定互动栏 -->
    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:paddingHorizontal="24dp"
        android:layout_alignParentBottom="true"
        android:elevation="4dp">

        <!-- 点赞按钮 -->
        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_add"
            android:contentDescription="点赞" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点赞"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- 评论按钮 -->
    <LinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_dialog_email"
        android:contentDescription="评论" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp" />
</LinearLayout>

    <!-- 收藏按钮 -->
<LinearLayout
android:id="@+id/ll_collect"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true">

<ImageView
android:id="@+id/iv_collect"
android:layout_width="24dp"
android:layout_height="24dp"
android:src="@android:drawable/ic_menu_save"
android:contentDescription="收藏" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="收藏"
android:textSize="12sp"
android:textColor="#666666"
android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- 分享按钮 -->
<LinearLayout
android:id="@+id/ll_share"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true">

<ImageView
android:id="@+id/iv_share"
android:layout_width="24dp"
android:layout_height="24dp"
android:src="@android:drawable/ic_menu_share"
android:contentDescription="分享" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="分享"
android:textSize="12sp"
android:textColor="#666666"
android:layout_marginTop="4dp" />
    </LinearLayout>
    </LinearLayout>
    </RelativeLayout>