<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".CommunityActivity">

    <!-- 顶部标题栏 -->
    <ImageView
        android:id="@+id/imageView_title_in_Community"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg"
        android:clickable="true"/>

    <!-- 用户头像 -->
    <ImageView
        android:id="@+id/imageView_user_in_Community"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg" />

    <!-- 帖子列表（核心新增） -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_posts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView_title_in_Community"
        app:layout_constraintBottom_toTopOf="@+id/button_Main_in_Community"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 底部按钮 -->
    <Button
        android:id="@+id/button_Main_in_Community"
        android:layout_width="205dp"
        android:layout_height="92dp"
        android:background="@drawable/btn_rectangle"
        android:text="主页"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_Community_in_Community"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_Community_in_Community"
        android:layout_width="206dp"
        android:layout_height="92dp"
        android:background="@drawable/btn_rectangle"
        android:text="社区"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 悬浮按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="116dp"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="@color/black"
        app:elevation="6dp"
        app:fabSize="mini"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:pressedTranslationZ="10dp"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>