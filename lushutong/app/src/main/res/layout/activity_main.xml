<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_CreateItinerary"
        android:layout_width="184dp"
        android:layout_height="88dp"
        android:layout_marginTop="140dp"
        android:text="创建行程"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_JoinTogether"
        android:layout_width="184dp"
        android:layout_height="88dp"
        android:layout_marginTop="350dp"
        android:text="加入协作"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Main_in_Main"
        android:layout_width="205dp"
        android:layout_height="92dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/btn_rectangle"
        android:text="主页"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_Community_in_Main"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_Community_in_Main"
        android:layout_width="204dp"
        android:layout_height="92dp"
        android:background="@drawable/btn_rectangle"
        android:text="社区"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView_title"
        android:layout_width="413dp"
        android:layout_height="89dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/imageView_user_in_Main"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg" />

</androidx.constraintlayout.widget.ConstraintLayout>
